<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
<Appenders>
	<RollingFile name="appAppender" fileName="/data/applogs/helloworld-web/logs/app.log"
				 filePattern="/data/applogs/helloworld-web/logs/app-%d{MM-dd-yyyy}-%i.log.gz">
		<PatternLayout pattern="[helloworld-web]%d %-5p [%c] %m%n"/>
		<SizeBasedTriggeringPolicy size="2MB"/>
	</RollingFile>
	<Console name="STDOUT" target="SYSTEM_OUT">
		<PatternLayout pattern="[helloworld-web]%d %-5p [%c] %m%n"/>
	</Console>
</Appenders>
<Loggers>
	<Root level="info">
		<AppenderRef ref="STDOUT"/>
		<AppenderRef ref="appAppender"/>
	</Root>
</Loggers>
</Configuration>